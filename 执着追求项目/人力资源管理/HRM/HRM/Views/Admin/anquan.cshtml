@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>anquan</title>
    <link href="~/UI/themes/icon.css" rel="stylesheet" />
    <link href="~/UI/themes/default/easyui.css" rel="stylesheet" />
    <script src="~/Script/jquery-1.11.2.min.js"></script>
    <script src="~/UI/jquery.easyui.min.js"></script>
    <script src="~/UI/locale/easyui-lang-zh_CN.js"></script>
</head>
<body>
    <style>
        #bigdiv {
            background-image: url('../Imges/320433.jpg');
            background-image: 200px;
            width:100%;
            height:100%;
        }
    </style>
    <style type="text/css">
        ul li {
       list-style:none;
        }
        #Update {
        margin-left:500px;
        }
    </style>
    <script type="text/javascript">


        function xiugai() {
                $('#xiugai').form('submit', {
                url: "/Admin/update",
                onSubmit: function () {
                    $('#xiugai').form('validate')
                },
                success: function (data) {
                    $.messager.alert("提示", data);

                   
                }, error: function () {

                }
            });
        }

            
        
    </script>
    <div id="bigdiv">
       <form id="xiugai" enctype="multipart/form-data" method="post">
        <div id="Update" style="width:500px; text-align:center;">
             <h2>修改密码</h2>
            <ul>
                <li> @ViewBag.chaxun</li>
                <li><span style="font-size:15px;">旧密码:</span>&nbsp;<input type="text" style="width:200px;" name="pwd1" /></li>
                <br /> <br />
                <li><span style="font-size:15px;">新密码:</span>&nbsp;<input type="text"style="width:200px;" name="pwd2" /></li>
                   <br /> <br />
                     <li><span style="font-size:15px;">密保:</span>&nbsp;&nbsp;&nbsp;&nbsp;<span style="font-size:20px;"> @ViewBag.mibao</span></li>
                <br /> 
                 <li><span style="font-size:15px;">答案:</span>&nbsp;<input type="text"style="width:200px;" name="daan" /></li>
                <br /> <br />
                   <li>&nbsp;&nbsp;&nbsp;&nbsp;<span style="font-size:20px;"> @ViewBag.baocuo</span></li>
              <li> <input id="dl" type="button" value="修改" onclick="xiugai()" /></li>
            </ul>
        </div>

           </form>
         
    </div>
</body>
</html>
